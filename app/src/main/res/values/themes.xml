<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Surf" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.NoTitleFullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.login" parent="Theme.NoTitleFullscreen">
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.main" parent="Theme.Surf">
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.chat" parent="Theme.Surf">
        <item name="android:navigationBarColor">#EBEDF5</item>
    </style>

    <style name="OverflowMenuStyle" parent="Theme.main">
        <!-- Api 21 -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
<!--        <item name="android:popupBackground">@color/action_bar_title_text_color</item>
        &lt;!&ndash; 设置弹出菜单文字颜色 &ndash;&gt;
        <item name="android:textColor">@color/message_text</item>-->
    </style>

</resources>